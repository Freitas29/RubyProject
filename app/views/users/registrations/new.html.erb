<div class="container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="row mt-5">
      <div class="col-md-6">
        <div class="form-group">
              <div class="input-group input-group-alternative mb-4">
                <div class="input-group-prepend">
                    <span class="input-group-text"><%= icon('far', 'address-book', class: 'strong') %></span>
                </div>
                <%= f.text_field :name, class: "form-control form-control-alternative", placeholder: "Nome" %>    
              </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
              <div class="input-group input-group-alternative mb-4">
                <div class="input-group-prepend">
                    <span class="input-group-text"><%= icon('far', 'address-book', class: 'strong') %></span>
                </div>
                <%= f.text_field :email, class: "form-control form-control-alternative", placeholder: "Email" %>    
              </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
              <div class="input-group input-group-alternative mb-4">
                <div class="input-group-prepend">
                    <span class="input-group-text"><%= icon('far', 'address-book', class: 'strong') %></span>
                </div>
                <%= f.password_field :password, class: "form-control form-control-alternative", placeholder: "*******" %>    
              </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
              <div class="input-group input-group-alternative mb-4">
                <div class="input-group-prepend">
                    <span class="input-group-text"><%= icon('far', 'address-book', class: 'strong') %></span>
                </div>
                <%= f.password_field :password_confirmation, class: "form-control form-control-alternative" , placeholder: "*****" %>    
              </div>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-default"%>
      </div>
    <% end %>
  </div>
</div>

<%= render "users/shared/links" %>
