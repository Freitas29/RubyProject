
<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
  <div class="container-fluid">
      <div class="row">
        <ul class="list-group">
        <% post.errors.full_messages.each do |message| %>
          <li class="ist-group-item">
            <div class="alert alert-danger alert-dismissible fade show " role="alert">
              <span class="alert-inner--icon"><%= icon('fas', 'exclamation-circle') %></span>
              <span class="alert-inner--text "><%= message %></span>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
              </button>
            </div>
          </li>
        <% end %>
        </ul>
      </div>    
  </div>
  <% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <div class="input-group input-group-alternative mb-4">
          <%= form.text_field :title, id: "title", class: "form-control form-control-alternative" %>    
        </div>
      </div>

      <div class="form-group">
        <div class="input-group input-group-alternative mb-4">
          <%= form.text_field :description, id: "description", class: "form-control form-control-alternative" %>    
        </div>
      </div>

      <div class="form-group">
          <div class="input-group input-group-alternative mb-4">
            <%= form.file_field :photo, id: "photo", class: "form-control form-control-alternative" %>    
          </div>
        </div>
      </div>
    
    <div class="col-md-6">
      <div class="col-md-4 mt-5">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" id="card-photo" src="#" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title" id="card-title"></h5>
                    <p class="card-text" id="card-description"></p>
                    <a href="#" class="btn btn-primary" disabled>Ver mais</a>
                </div>
            </div>
        </div>
    </div>

  </div>
</div>




  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= javascript_include_tag 'posts' %>